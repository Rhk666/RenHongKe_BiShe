.Conter::before {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(
    to right,
    rgba(255, 255, 255, 0.1) 0%,
    rgba(255, 255, 255, 0.05) 50%,
    rgba(255, 255, 255, 0.1) 100%
  );
  transform: translateX(-100%);
  transition: transform 1.5s ease;
}

.Conter:hover::before {
  transform: translateX(100%);
}

.Conter:active {
  transform: perspective(1000rpx) translateY(4rpx);
  box-shadow: 
    0 6rpx 20rpx rgba(0, 204, 102, 0.08),
    0 2rpx 8rpx rgba(0, 204, 102, 0.06),
    inset 0 2rpx 0 rgba(255, 255, 255, 0.9);
}

