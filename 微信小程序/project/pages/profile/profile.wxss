/* 页面全局样式 - 绿色主题 */
page {
  background: linear-gradient(180deg, #f0fff8 0%, #e8f8ef 100%);
  font-family: PingFang SC, Microsoft YaHei, sans-serif;
}

/* 页面容器 - 左右留边，避免内容贴边 */
.timeline-container {
  width: 100%;
  min-height: 100vh;
  padding: 20rpx 15rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}

/* 页面标题 */
.timeline-title {
  text-align: center;
  margin-bottom: 30rpx;
  padding: 10rpx 0;
}

.title-text {
  font-size: 36rpx;
  font-weight: 700;
  color: #00cc66;
  text-shadow: 0 0 8rpx rgba(0, 204, 102, 0.3);
  letter-spacing: 2rpx;
}

/* 滚动容器 */
.timeline-scroll {
  flex: 1;
  width: 100%;
  margin-bottom: 20rpx;
}

/* 时间线主体容器 - 居中布局 */
.timeline-wrap {
  width: 100%;
  position: relative;
  padding-left: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 时间轴竖线 */
.timeline-wrap::before {
  content: "";
  position: absolute;
  left: 15rpx;
  top: 0;
  bottom: 0;
  width: 4rpx;
  background: linear-gradient(to bottom, #00cc66, #33dd88, #00cc66);
  border-radius: 2rpx;
}

/* 单个节点 - 限制宽度，避免超出 */
.timeline-node {
  width: 95%;
  max-width: 600rpx;
  display: flex;
  align-items: flex-start;
  margin-bottom: 40rpx;
  position: relative;
  box-sizing: border-box;
}

/* 节点圆点 - 位置微调 */
.node-dot {
  width: 30rpx;
  height: 30rpx;
  background: #ffffff;
  border: 4rpx solid #00cc66;
  border-radius: 50%;
  box-shadow: 0 0 10rpx rgba(0, 204, 102, 0.4);
  position: absolute;
  left: -28rpx;
  top: 10rpx;
  z-index: 1;
}

/* 节点内容 - 纵向布局，居中对齐 */
.node-content {
  width: 100%;
  display: flex;
  flex-direction: column;
  gap: 15rpx;
  align-items: center;
}

/* 节点图片 - 调大尺寸+16:9比例+不超屏 */
.node-img {
  width: 380rpx;
  height: 214rpx;
  max-width: 95%;
  border-radius: 12rpx;
  border: 2rpx solid #00cc66;
  box-shadow: 0 4rpx 12rpx rgba(0, 204, 102, 0.2);
  flex-shrink: 0;
  object-fit: cover;
  display: block;
}

/* 节点文字卡片 - 同步宽度，对齐图片 */
.node-text {
  width: 95%;
  max-width: 500rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 16rpx;
  padding: 20rpx;
  box-shadow: 0 6rpx 12rpx rgba(0, 0, 0, 0.06);
  border-left: 4rpx solid #00cc66;
  box-sizing: border-box;
}

/* 文字标题 */
.text-title {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: #1e293b;
  margin-bottom: 10rpx;
}

/* 文字描述 */
.text-desc {
  display: block;
  font-size: 24rpx;
  color: #64748b;
  line-height: 1.5;
  letter-spacing: 1rpx;
}

/* 总结框样式 - 深色背景+绿色高光，与节点卡片区分 */
.summary-box {
  width: 95%;
  max-width: 600rpx;
  margin: 20rpx auto 30rpx; /* 上下间距，居中显示 */
  padding: 30rpx 25rpx;
  background: linear-gradient(135deg, rgba(0, 100, 50, 0.1), rgba(0, 150, 80, 0.1));
  border: 2rpx solid #00cc66;
  border-radius: 20rpx;
  box-shadow: 0 8rpx 20rpx rgba(0, 204, 102, 0.15);
  position: relative;
  overflow: hidden;
}

/* 总结框装饰角标 - 增加独特性 */
.summary-box::before {
  content: "";
  position: absolute;
  top: 0;
  right: 0;
  width: 80rpx;
  height: 80rpx;
  background: linear-gradient(45deg, #00cc66, transparent);
  border-radius: 0 18rpx 0 50rpx;
  opacity: 0.3;
}

/* 总结标题 */
.summary-title {
  margin-bottom: 15rpx;
  padding-bottom: 10rpx;
  border-bottom: 1rpx solid rgba(0, 204, 102, 0.3);
}

.summary-title text {
  font-size: 30rpx;
  font-weight: 700;
  color: #009955;
  letter-spacing: 2rpx;
}

/* 总结内容 */
.summary-content {
  font-size: 24rpx;
  color: #334155;
  line-height: 1.6;
  text-align: justify;
  margin-bottom: 20rpx; /* 新增：给图片留出间距 */
}

/* 新增：总结框大图片容器 */
.summary-img-wrap {
  width: 100%;
  display: flex;
  justify-content: center;
  margin-top: 15rpx;
}

/* 新增：总结框大图片样式（16:9比例+大尺寸） */
.summary-img {
  width: 100%; /* 占满总结框宽度，最大化显示 */
  height: auto;
  aspect-ratio: 16/9 !important; /* 强制16:9比例 */
  border-radius: 12rpx;
  border: 2rpx solid #00cc66;
  box-shadow: 0 4rpx 12rpx rgba(0, 204, 102, 0.2);
  object-fit: cover; /* 图片填充不变形 */
  display: block; /* 保证显示 */
}


/* 返回按钮 */
.back-btn-wrap {
  width: 100%;
  display: flex;
  justify-content: center;
  margin-bottom: 20rpx;
}

.back-btn {
  padding: 15rpx 60rpx;
  background: linear-gradient(90deg, #00cc66, #33dd88);
  color: #ffffff;
  font-size: 28rpx;
  font-weight: 600;
  border-radius: 40rpx;
  border: none;
  box-shadow: 0 6rpx 12rpx rgba(0, 204, 102, 0.2);
  transition: all 0.3s ease;
}

.back-btn:hover {
  transform: translateY(-3rpx);
  box-shadow: 0 8rpx 16rpx rgba(0, 204, 102, 0.3);
}

.back-btn:active {
  transform: scale(0.98);
  background: linear-gradient(90deg, #00b359, #2acc7a);
}